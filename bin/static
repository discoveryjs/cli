#!/usr/bin/env node

const clap = require('clap');
const fs = require('fs');
const path = require('path');
const commonOptions = require('../lib/cli');
const buildStatic = require('../lib/static');

// define command
const command = clap.command('discovery-static', '[config]')
    .version(require('../package.json').version)
    .option(...commonOptions.config)
    .option(...commonOptions.model)
    .option('-d, --dir <dirname>', 'Directory with already prebuilt models',
        (value = '') => path.resolve(process.cwd(), value))
    .action(function(args) {
        const configFile = this.values.config || args[0];
        const options = Object.assign({}, this.values, {
            configFile
        });

        buildStatic(options).then(stream => {
            if (typeof process.send === 'function') {
                process.send({ payload: 'stream' });
                stream.pipe(fs.createWriteStream(null, { fd: 4 }));
                return;
            }
        });
    });

// run command
try {
    command.run();
} catch (e) {
    // output user frendly message if cli error
    if (e instanceof clap.Error) {
        console.error(e.message || e);
        process.exit(2);
    }

    // otherwise re-throw exception
    throw e;
}
